<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="addOwnWordViewModel"
            type="com.szczecin.englishtamagotchi.viewmodel.addOwnWord.AddOwnWordViewModel" />

        <import type="android.view.View" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editText_eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="91dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="107dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@={addOwnWordViewModel.eng}"
            binding:layout_constraintEnd_toEndOf="parent"
            binding:layout_constraintStart_toStartOf="parent"
            binding:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText_rus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="91dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="107dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@={addOwnWordViewModel.rus}"
            binding:layout_constraintEnd_toEndOf="parent"
            binding:layout_constraintStart_toStartOf="parent"
            binding:layout_constraintTop_toBottomOf="@+id/editText_eng" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="3dp"
            android:onClick="@{()->addOwnWordViewModel.save()}"
            android:text="Save"
            binding:layout_constraintEnd_toEndOf="parent"
            binding:layout_constraintTop_toBottomOf="@+id/editText_rus" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>