<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mainViewModel"
            type="com.szczecin.englishtamagotchi.viewmodel.MainViewModel" />

        <import type="android.view.View" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_choose_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:onClick="chooseCorrectExercise"
                    android:text="choose card"
                    binding:layout_constraintEnd_toEndOf="parent"
                    binding:layout_constraintStart_toStartOf="parent"
                    binding:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_eng_rus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:onClick="chooseCorrectExercise"
                    android:text="eng - rus"
                    binding:layout_constraintEnd_toEndOf="parent"
                    binding:layout_constraintHorizontal_bias="0.501"
                    binding:layout_constraintStart_toStartOf="parent"
                    binding:layout_constraintTop_toBottomOf="@+id/btn_choose_card" />

                <Button
                    android:id="@+id/btn_rus_eng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:onClick="chooseCorrectExercise"
                    android:text="Rus - eng"
                    binding:layout_constraintEnd_toEndOf="parent"
                    binding:layout_constraintHorizontal_bias="0.503"
                    binding:layout_constraintStart_toStartOf="parent"
                    binding:layout_constraintTop_toBottomOf="@+id/btn_eng_rus" />

                <Button
                    android:id="@+id/btn_writing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:onClick="chooseCorrectExercise"
                    android:text="Writing"
                    binding:layout_constraintEnd_toEndOf="parent"
                    binding:layout_constraintHorizontal_bias="0.503"
                    binding:layout_constraintStart_toStartOf="parent"
                    binding:layout_constraintTop_toBottomOf="@+id/btn_rus_eng" />

                <Button
                    android:id="@+id/btn_binding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:onClick="chooseCorrectExercise"
                    android:text="binding"
                    binding:layout_constraintEnd_toEndOf="parent"
                    binding:layout_constraintStart_toStartOf="parent"
                    binding:layout_constraintTop_toBottomOf="@+id/btn_writing" />

                <TextView
                    android:id="@+id/day_learning_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day: "
                    binding:layout_constraintBottom_toBottomOf="parent"
                    binding:layout_constraintEnd_toEndOf="parent"
                    binding:layout_constraintStart_toEndOf="@+id/new_words_per_day_10"
                    binding:layout_constraintTop_toBottomOf="@+id/textView5" />

                <TextView
                    android:id="@+id/day_learning"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{mainViewModel.numberOfLearningDay.toString()}"
                    binding:layout_constraintBottom_toBottomOf="parent"
                    binding:layout_constraintStart_toEndOf="@+id/day_learning_txt"
                    binding:layout_constraintTop_toBottomOf="@+id/textView5" />

                <Button
                    android:id="@+id/new_words_per_day_5"
                    android:layout_width="42dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:onClick="chooseCorrectExercise"
                    android:text="5"
                    binding:layout_constraintStart_toStartOf="parent"
                    binding:layout_constraintTop_toBottomOf="@+id/textView5" />

                <Button
                    android:id="@+id/new_words_per_day_10"
                    android:layout_width="42dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:onClick="chooseCorrectExercise"
                    android:text="10"
                    binding:layout_constraintStart_toEndOf="@+id/new_words_per_day_5"
                    binding:layout_constraintTop_toBottomOf="@+id/textView5" />

                <Button
                    android:id="@+id/new_words_per_day_15"
                    android:layout_width="42dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:onClick="chooseCorrectExercise"
                    android:text="15"
                    binding:layout_constraintStart_toEndOf="@+id/new_words_per_day_10"
                    binding:layout_constraintTop_toTopOf="@+id/new_words_per_day_10" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="24dp"
                    android:text="New words per day:"
                    binding:layout_constraintStart_toStartOf="parent"
                    binding:layout_constraintTop_toBottomOf="@+id/btn_binding" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>