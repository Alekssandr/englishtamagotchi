<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ordinaryCardViewModel"
            type="com.szczecin.englishtamagotchi.viewmodel.OrdinaryCardChoiceViewModel" />

        <import type="android.view.View" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/open_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@{ordinaryCardViewModel.translateWordEng}"
            binding:layout_constraintEnd_toEndOf="parent"
            binding:layout_constraintHorizontal_bias="0.498"
            binding:layout_constraintStart_toStartOf="parent"
            binding:layout_constraintTop_toTopOf="parent"
            tools:text="open word" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@{ordinaryCardViewModel.translateWordRus}"
            binding:layout_constraintEnd_toEndOf="parent"
            binding:layout_constraintHorizontal_bias="0.498"
            binding:layout_constraintStart_toStartOf="parent"
            binding:layout_constraintTop_toBottomOf="@+id/open_word"
            tools:text="close word" />

