            <!--                    binding:layout_constraintEnd_toEndOf="parent"-->
            <!--                    binding:layout_constraintStart_toStartOf="parent"-->
            <!--                    binding:layout_constraintTop_toTopOf="parent" />-->

            <Button
                android:id="@+id/btn_eng_rus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:onClick="chooseCorrectExercise"
                android:text="eng - rus"
                binding:layout_constraintEnd_toEndOf="parent"
                binding:layout_constraintHorizontal_bias="0.501"
                binding:layout_constraintStart_toStartOf="parent"
                binding:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_rus_eng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:onClick="chooseCorrectExercise"
                android:text="Rus - eng"
                binding:layout_constraintEnd_toEndOf="parent"
                binding:layout_constraintHorizontal_bias="0.503"
                binding:layout_constraintStart_toStartOf="parent"
                binding:layout_constraintTop_toBottomOf="@+id/btn_eng_rus" />

            <Button
                android:id="@+id/btn_writing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:onClick="chooseCorrectExercise"
                android:text="Writing"
                binding:layout_constraintEnd_toEndOf="parent"
                binding:layout_constraintHorizontal_bias="0.503"
                binding:layout_constraintStart_toStartOf="parent"
                binding:layout_constraintTop_toBottomOf="@+id/btn_rus_eng" />

            <Button
                android:id="@+id/btn_binding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:onClick="chooseCorrectExercise"
                android:text="binding"
                binding:layout_constraintEnd_toEndOf="parent"
                binding:layout_constraintStart_toStartOf="parent"
                binding:layout_constraintTop_toBottomOf="@+id/btn_writing" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>